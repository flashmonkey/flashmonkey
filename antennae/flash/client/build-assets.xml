<!-- build-assets.xml: This file pulls in definitions of all build assets for
     project directories below it. -->
<project name="paperworld.flash.assets">
	
	<dirname property="paperworld.flash.assets.dir" file="${ant.file.paperworld.flash.assets}"/>
	
    <import file="core/build-assets.xml"/>
    <import file="connection/build-assets.xml"/>
	<import file="ai/build-assets.xml"/>
	<import file="multiplayer/build-assets.xml"/>
	<import file="pv3d-core/build-assets.xml"/>
	<import file="pv3d-multiplayer/build-assets.xml"/>
	
	<!-- Define library SWC files shared by the flash projects. -->		
	<property name="paperworld.datastructures.swc" location="${paperworld.flash.assets.dir}/lib/datastructures.swc"/>
	<property name="paperworld.spring-as.swc" location="${paperworld.flash.assets.dir}/lib/spring-actionscript.swc"/>
	<property name="paperworld.spring-as-resources.swc" location="${paperworld.flash.assets.dir}/lib/springactionscript_resourceloading.swc"/>
	<property name="paperworld.moccasin.swc" location="${paperworld.flash.assets.dir}/lib/moccasin-core.swc"/>
	<property name="paperworld.papervision.swc" location="${paperworld.flash.assets.dir}/lib/Papervision3D.swc"/>

</project>
