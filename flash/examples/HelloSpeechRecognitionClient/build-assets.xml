<!-- Build assets for library1.  Note that all paths are defined
     relative to ${multi.dir} since we don't know what the current
     directory is in which Ant is running. -->
<project name="HelloSpeechRecognitionClient.assets">
    <dirname property="HelloSpeechRecognitionClient.assets.dir" file="${ant.file.HelloSpeechRecognitionClient.assets}"/>

    <!-- Define SWC exported by this library. -->
    <property name="HelloSpeechRecognitionClient.swf" location="${HelloSpeechRecognitionClient.assets.dir}/${build.mxmlc.dir}/HelloSpeechRecognitionClient.swf"/>

</project>
