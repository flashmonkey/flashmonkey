<!-- build-assets.xml: This file pulls in definitions of all build assets for
     project directories below it. -->
<project name="flash.assets">
	
	<dirname property="flash.assets.dir" file="${ant.file.flash.assets}"/>
	
	<!-- Define library SWC files shared by the flash projects. -->	
	<property name="sos.logging.swc" location="${flash.lib.dir}/sosloggingtarget_1.0.1.swc" />
	<property name="datastructures.swc" location="${flash.lib.dir}/datastructures.swc"/>
	<property name="spring-as.swc" location="${flash.lib.dir}/spring-actionscript.swc"/>
	<property name="spring-as-resources.swc" location="${flash.lib.dir}/springactionscript_resourceloading.swc"/>
	<property name="moccasin.swc" location="${flash.lib.dir}/moccasin-core.swc"/>
	<property name="papervision.swc" location="${flash.lib.dir}/Papervision3D.swc"/>
    <property name="pushbuttonengine.swc" location="${flash.lib.dir}/PBEngine.swc"/>

</project>
